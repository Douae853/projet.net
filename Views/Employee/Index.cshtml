@model List<projet.net.Models.Employee>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employees</title>
</head>
<body>
    <h1>List of Employees</h1>
    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Rôle</th>
                <th>Restaurant</th>
                <th>Change Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Nom</td>
                    <td>@employee.Prenom</td>
                    <td>@employee.Poste</td>
                    <td>@employee.RestaurantNom</td>
                    <td>
                        <!-- Form for changing the role of the employee -->
                        <form method="post" asp-action="ChangeRole" asp-route-id="@employee.Id">
                            <select name="role">
                                <option value="hotesse" @if (employee.Poste == "hotesse") { <text>selected</text> }>Hotesse</option>
                                <option value="serveur" @if (employee.Poste == "serveur") { <text>selected</text> }>Serveur</option>
                                <option value="admin" @if (employee.Poste == "admin") { <text>selected</text> }>Admin</option>
                            </select>

                            <button type="submit">Update Role</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
