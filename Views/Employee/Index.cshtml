@model List<projet.net.Models.Employee>  // Make sure this matches the namespace

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employees</title>
</head>
<body>
    <h1>List of Employees</h1>
    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Rôle</th>
                <th>Restaurant</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Nom</td>
                    <td>@employee.Prenom</td>
                    <td>@employee.Poste</td>
                    <td>@employee.IdRestaurant</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
